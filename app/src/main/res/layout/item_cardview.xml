<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:id="@+id/image_enfermedades"
            android:src="@drawable/peces_dulce"/>

        <LinearLayout
            android:id="@+id/layout_info"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_toRightOf="@+id/image_enfermedades"
            android:layout_toEndOf="@+id/image_enfermedades">
            <!--Etiqueta Perfil -->

            <RelativeLayout
                android:id="@+id/titulo_clic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="titulo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right"
                    android:background="@null"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:background="@drawable/linea"
                android:layout_height="3dp"
                android:layout_margin="2dp"></View>

            <TextView
                android:id="@+id/descrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Los peces de agua salada, tambiÃ©n conocidos como peces marinos, precisan de un cuidado diferente al que reciben los peces de agua dulce" />

        </LinearLayout>

    </RelativeLayout>

    </android.support.v7.widget.CardView>