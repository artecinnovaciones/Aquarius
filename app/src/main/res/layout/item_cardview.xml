<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_ir">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:id="@+id/image_enfermedades"
            android:src="@drawable/peces_dulce"/>

        <RelativeLayout
            android:id="@+id/layout_info"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:layout_toRightOf="@+id/image_enfermedades"
            android:layout_toEndOf="@+id/image_enfermedades"
            android:layout_toLeftOf="@+id/ir_btn"
            android:layout_toStartOf="@+id/ir_btn">
            <!--Etiqueta Perfil -->

            <LinearLayout
                android:id="@+id/titulo_clic"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="titulo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <View
                    android:layout_width="wrap_content"
                    android:background="@drawable/linea"
                    android:layout_height="3dp"
                    android:layout_margin="2dp"></View>

                <TextView
                    android:id="@+id/descrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Los peces de agua salada, tambiÃ©n conocidos como peces marinos, precisan de un cuidado diferente al que reciben los peces de agua dulce" />

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/ir_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_right"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>